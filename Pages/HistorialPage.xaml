                                    </StackLayout>

                                    <StackLayout Orientation="Horizontal" Spacing="15" Grid.Column="4" Grid.Row="1">
                                        <Label Text="Series:" VerticalOptions="Center"/>
                                        <Label Text="{Binding Series}" VerticalOptions="Center"/>
                                    </StackLayout>

                                    <StackLayout Orientation="Horizontal" Spacing="15" Grid.Column="5" Grid.Row="1">
                                        <Label Text="KG:" VerticalOptions="Center"/>
                                        <Label Text="{Binding Kg}" VerticalOptions="Center"/>
                                    </StackLayout>
                                </Grid>


                                <!-- Separador -->
                                <StackLayout Grid.Row="2" Grid.ColumnSpan="6" BackgroundColor="{StaticResource VerdeLima}" HeightRequest="5" Margin="10"></StackLayout>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </Grid>
        <!-- Barra Menú -->
        <local:MenuBarra Grid.Row="2"/>

    </Grid>
</ContentPage>