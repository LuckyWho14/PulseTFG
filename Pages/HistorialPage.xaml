                        OnColor="{StaticResource AzulCian}"
                        ThumbColor="{StaticResource MoradoPrincipal}"
                        VerticalOptions="Center"
                        HorizontalOptions="Center" />
            </HorizontalStackLayout>
            <StackLayout Grid.Row="1">

                <StackLayout BackgroundColor="{StaticResource VerdeLima}" HeightRequest="10" Margin="20"/>
                <CollectionView x:Name="EjerciciosList" ItemsSource="{Binding ListaEjercicios}" 
                    SelectionMode="Single" 
                    Margin="10"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="Center">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid 
                                    RowDefinitions="2*,*,*"
                                    ColumnDefinitions="*,2*,*,*,*,*"
                                    Padding="10"
                                    ColumnSpacing="10">

                                <!-- Fila del día corriente -->
                                <StackLayout Orientation="Horizontal" Spacing="20" Grid.Column="0">
                                    <CheckBox IsChecked="{Binding Hecho}" />
                                    <Label Text="Hecho" VerticalOptions="Center"/>
                                </StackLayout>

                                <Label Text="{Binding Nombre}" FontAttributes="Bold" FontSize="25" Grid.Column="1" 
                               VerticalOptions="Center"/>

                                <StackLayout Orientation="Horizontal" Spacing="10" Grid.Column="2" >
                                    <Image Source="fuego.png" HeightRequest="20" HorizontalOptions="Center" VerticalOptions="Center"/>
                                    <Slider Minimum="1" Maximum="10" Value="{Binding Intensidad}" MinimumWidthRequest="100"/>
                                </StackLayout>


                                <StackLayout Orientation="Horizontal" Spacing="15" Grid.Column="3">
                                    <Stepper Value="{Binding Repeticiones}" BackgroundColor="{StaticResource AzulCian}" Minimum="0" Maximum="100"/>
                                    <Label Text="Reps:" VerticalOptions="Center" FontAttributes="Bold"/>
                                    <Label Text="{Binding Repeticiones}" VerticalOptions="Center" FontSize="20"/>
                                </StackLayout>

                                <StackLayout Orientation="Horizontal" Spacing="15" Grid.Column="4">
                                    <Stepper Value="{Binding Series}" BackgroundColor="{StaticResource AzulCian}" Minimum="0" Maximum="20"/>
                                    <Label Text="Series:" VerticalOptions="Center" FontAttributes="Bold"/>
                                    <Label Text="{Binding Series}" VerticalOptions="Center" FontSize="20"/>
                                </StackLayout>

                                <StackLayout Orientation="Horizontal" Spacing="15" Grid.Column="5">
                                    <Stepper Value="{Binding Kg}" BackgroundColor="{StaticResource AzulCian}" Minimum="0" Maximum="300" Increment="1"/>
                                    <Label Text="KG:" VerticalOptions="Center" FontAttributes="Bold"/>
                                    <Label Text="{Binding Kg}" VerticalOptions="Center" FontSize="20"/>
                                </StackLayout>

