                                <Grid Grid.Row="1" Grid.ColumnSpan="6"
                                      RowDefinitions="Auto" ColumnDefinitions="*,2*,*,*,*,*"
                                      IsVisible="{Binding Source={x:Reference HistorialPageRef}, Path=EstaActivo}">
                                    
                                    <StackLayout Orientation="Horizontal" Spacing="20" Grid.Column="0" Grid.Row="1">
                                        <CheckBox IsChecked="{Binding Hecho}" IsEnabled="False"/>
                                        <Label Text="Hecho" VerticalOptions="Center"/>
                                    </StackLayout>
                                    <Label Text="Anterior" FontAttributes="Bold" FontSize="18" Grid.Column="1" Grid.Row="1"
                                           VerticalOptions="Center"/>
                                    <StackLayout Orientation="Horizontal" Spacing="10" Grid.Column="2" Grid.Row="1">
                                        <Image Source="fuego.png" HeightRequest="20" HorizontalOptions="Center" VerticalOptions="Center"/>
                                        <ProgressBar  Progress="{Binding Intensidad}" MinimumWidthRequest="100"/>
