                                    <!-- ProgressBar para mostrar la intensidad adecuadamente sería progressBar.Progress = (sliderValue - 1) / 9.0;-->

                                    <StackLayout Orientation="Horizontal" Spacing="15" Grid.Column="3" Grid.Row="1">
                                        <Label Text="Reps:" VerticalOptions="Center"/>
