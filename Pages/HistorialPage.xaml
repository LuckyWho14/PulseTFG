    <Grid 
        RowDefinitions="*,4*,*" 
        ColumnDefinitions="*">
        
        <!-- Título -->
        <Label 
            Text="Historial"
            TextColor="{StaticResource MoradoPrincipal}"
            FontFamily="AntonRegular"
            FontSize="40"
            FontAttributes="Italic"
            HorizontalOptions="Center"
            VerticalOptions="Center" />

        <!-- ════ Fila 1: CUERPO (filtros + lista) ════ -->
        <Grid Grid.Row="1" RowDefinitions="Auto,Auto,*,Auto" ColumnDefinitions="*">

            <!-- 1.1. Fila 0 dentro del cuerpo: Switch + DatePicker -->
            <HorizontalStackLayout
                Grid.Row="0"
                HorizontalOptions="Center"
                Spacing="20"
                Margin="10,10,10,0">

                <Label
                    Text="Todos los días"
                    TextColor="White"
                    VerticalOptions="Center" />

                <Switch
                    IsToggled="{Binding MostrarTodosDias}"
                    VerticalOptions="Center" />

                <Label
                    Text="Filtrar por fecha:"
                    TextColor="White"
                    VerticalOptions="Center" />

                <DatePicker
                    Date="{Binding FechaSeleccionada}"
                    IsEnabled="{Binding MostrarTodosDias, Converter={StaticResource InverseBooleanConverter}}"
                    MaximumDate="{x:Static sys:DateTime.Today}"
                    TextColor="White" />

                <!-- Picker para ejercicio -->
            <StackLayout
                Grid.Row="1"
                Orientation="Horizontal"
                HorizontalOptions="Center"
                Spacing="10"
                Margin="10,5,10,5">

                <Label
                    Text="Ejercicio:"
                    TextColor="White"
                    VerticalOptions="Center" />

                <Picker
                    ItemsSource="{Binding ListaEjerciciosDisponibles}"
                    SelectedItem="{Binding EjercicioSeleccionado}"
                    TextColor="White"
                    HorizontalOptions="FillAndExpand" />
            </StackLayout>
            </HorizontalStackLayout>


            <!-- 1.3. Fila 2 dentro del cuerpo: RefreshView → CollectionView -->
            <RefreshView
                Grid.Row="2"
                IsRefreshing="{Binding IsBusy}"
                Command="{Binding RefrescarCommand}"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand">

                <CollectionView
                    x:Name="RegistrosList"
                    ItemsSource="{Binding ListaRegistros}"
                    SelectionMode="None"
                    Margin="10"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand">

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid
                                Padding="10"
                                RowDefinitions="Auto, Auto, Auto"
                                ColumnDefinitions="*,2*,*,*,*,*"
                                ColumnSpacing="10">

                                <!-- Fila 0: FECHA -->
                                <Label
                                    Grid.Row="0"
                                    Grid.ColumnSpan="6"
                                    Text="{Binding Fecha, StringFormat='Fecha: {0:dd/MM/yyyy}'}"
                                    FontAttributes="Italic"
                                    FontSize="16"
                                    TextColor="{StaticResource MoradoPrincipal}"
                                    HorizontalOptions="Center" />

                                <!-- Fila 1: DATOS DEL REGISTRO -->
                                <Grid Grid.Row="1" ColumnDefinitions="2*,*,*,*,*" Grid.ColumnSpan="5" Margin="50,0,0,0">

                                    <!-- 2. Nombre del ejercicio -->
                                    <Label
                                        Text="{Binding NombreEjercicio}"
                                        FontAttributes="Bold"
                                        FontSize="25"
                                        TextColor="White"
                                        VerticalOptions="Center" 
                                        />

                                    <!-- 3. Intensidad (ProgressBar) -->
                                    <StackLayout
                                        Grid.Column="1"
                                        Orientation="Horizontal"
                                        Spacing="5"
                                        VerticalOptions="Center">
                                        <Image
                                            Source="fuego.png"
                                            HeightRequest="20"
                                            HorizontalOptions="Center"
                                            VerticalOptions="Center" />
                                        <ProgressBar
                                            Progress="{Binding Intensidad, Converter={StaticResource IntensidadToProgressConverter}}"
                                            MinimumWidthRequest="100"
                                            VerticalOptions="Center" />
                                    </StackLayout>

                                    <!-- 4. Repeticiones -->
                                    <StackLayout
                                        Grid.Column="2"
                                        Orientation="Horizontal"
                                        Spacing="5"
                                        VerticalOptions="Center">
                                        <Label
                                            Text="Reps:"
                                            FontAttributes="Bold"
                                            TextColor="White"
                                            FontSize="20"
                                            VerticalOptions="Center" />
                                        <Label
                                            Text="{Binding Repeticion}"
                                            FontSize="20"
                                            TextColor="White"
                                            VerticalOptions="Center" />
                                    </StackLayout>

                                    <!-- 5. Series -->
                                    <StackLayout
                                        Grid.Column="3"
                                        Orientation="Horizontal"
                                        Spacing="5"
                                        VerticalOptions="Center">
                                        <Label
                                            Text="Series:"
                                            FontAttributes="Bold"
                                            TextColor="White"
                                            FontSize="20"
                                            VerticalOptions="Center" />
                                        <Label
                                            Text="{Binding Serie}"
                                            FontSize="20"
                                            TextColor="White"
                                            VerticalOptions="Center" />
                                    </StackLayout>

                                    <!-- 6. Peso (KG) -->
                                    <StackLayout
                                        Grid.Column="4"
                                        Orientation="Horizontal"
                                        Spacing="5"
                                        VerticalOptions="Center">
                                        <Label
                                            Text="KG:"
                                            FontAttributes="Bold"
                                            TextColor="White"
                                            FontSize="20"
                                            VerticalOptions="Center" />
                                        <Label
                                            Text="{Binding Peso, StringFormat='{}{0:0.0}'}"
                                            FontSize="20"
                                            TextColor="White"
                                            VerticalOptions="Center" />

                                    </StackLayout>
                                </Grid>

                                <!-- Fila 2: Separador visual -->
                                <BoxView
                                    Grid.Row="2"
                                    Grid.ColumnSpan="6"
                                    BackgroundColor="{StaticResource VerdeLima}"
                                    HeightRequest="2"
                                    Margin="0,10,0,0" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>

            <!-- 1.4. Fila 3 dentro del cuerpo: ActivityIndicator mientras IsBusy = true -->
            <ActivityIndicator
                Grid.Row="3"
                IsVisible="{Binding IsBusy}"
                IsRunning="{Binding IsBusy}"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Color="{StaticResource MoradoPrincipal}" />
        </Grid>

        <!-- ════ Fila 2: BARRA DE MENÚ ════ -->
        <local:MenuBarra Grid.Row="2" />
    </Grid>
</ContentPage>
