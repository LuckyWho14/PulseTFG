<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="PulseTFG.Pages.MensajePopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    CanBeDismissedByTappingOutsideOfPopup="False">

    <Grid BackgroundColor="Transparent">
        <Frame BackgroundColor="{StaticResource MoradoPrincipal}" Padding="20"
               HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="400" HeightRequest="200">
            <!-- Contenido del popup: frase motivacional y botón de cierre -->
            <VerticalStackLayout Spacing="15" HorizontalOptions="Center">
                <Label x:Name="MessageLabel"
                       Text="Frase motivacional"
                       FontSize="16"
                       TextColor="White"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center" />
                <!-- Botón para cerrar el popup -->
                <Button Text="Cerrar"
                        Clicked="CloseButton_Clicked"
                        BackgroundColor="{StaticResource RojoStop}"
                        TextColor="White"
                        HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</toolkit:Popup>
