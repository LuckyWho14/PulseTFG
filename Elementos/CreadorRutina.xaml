<?xml version="1.0" encoding="utf-8"?>
<ContentView
    x:Class="PulseTFG.Elementos.CreadorRutina"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">


  <Frame Padding="20" Margin="10" CornerRadius="8" BackgroundColor="White">
    <StackLayout Spacing="15">

      <Label Text="Crear Rutina" FontAttributes="Bold" FontSize="20" HorizontalOptions="Center"/>

      <Entry
        Placeholder="Nombre"
        Text="{Binding Nombre}" />

      <Editor
        Placeholder="DescripciÃ³n (opcional)"
        AutoSize="TextChanges"
        Text="{Binding Descripcion}" />

      <StackLayout Orientation="Horizontal" VerticalOptions="Center">
        <Label Text="Activa" VerticalOptions="Center"/>
        <Switch
          IsToggled="{Binding Activo}"
          HorizontalOptions="EndAndExpand"/>
      </StackLayout>

      <Button
        Text="Guardar Rutina"
        Command="{Binding CreateRoutineCommand}"
        BackgroundColor="{StaticResource MoradoPrincipal}"
        TextColor="White"/>

      <Label
        Text="{Binding Mensaje}"
        TextColor="Red"
        FontAttributes="Italic"
        HorizontalOptions="Center"/>

    </StackLayout>
  </Frame>
</ContentView>
