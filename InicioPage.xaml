<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PulseTFG.InicioPage"
             xmlns:local="clr-namespace:PulseTFG"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False" 
             BackgroundColor="{StaticResource FondoNegro}"
             FlyoutItem.IsVisible="True">
    <Grid 
        RowDefinitions="*,4*,*" 
        ColumnDefinitions="*">
        
        <!-- Título -->
        <Label 
            Text="Entrenamiento Actual" 
            TextColor="{StaticResource MoradoPrincipal}"
            FontFamily="AntonRegular"
            Grid.Row="0"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            FontSize="40"
            FontAttributes="Italic"/>

        <!-- Cuerpo -->
        <ListView x:Name="EjerciciosList" HasUnevenRows="True" SeparatorVisibility="Default"
                  Grid.Row="1" HorizontalOptions="Center">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid 
                            RowDefinitions="*"
                            ColumnDefinitions="*,2*,*,*,*,*"
                            Padding="10"
                            ColumnSpacing="10">
                            
                            <StackLayout Orientation="Horizontal" Spacing="20" Grid.Column="0">
                                <CheckBox IsChecked="{Binding Hecho}" />
                                <Label Text="Hecho" VerticalOptions="Center"/>
                            </StackLayout>

                            <Label Text="{Binding Nombre}" FontAttributes="Bold" FontSize="18" Grid.Column="1" 
                                   VerticalOptions="Center"/>

                            <StackLayout Orientation="Horizontal" Spacing="10" Grid.Column="2" >
                                <Image Source="fuego.png" HeightRequest="20" HorizontalOptions="Center" VerticalOptions="Center"/>
                                <Slider Minimum="1" Maximum="10" Value="{Binding Intensidad}" MinimumWidthRequest="100"/>
                            </StackLayout>


                            <StackLayout Orientation="Horizontal" Spacing="15" Grid.Column="3">
                                <Stepper Value="{Binding Repeticiones}" BackgroundColor="{StaticResource AzulCian}" Minimum="0" Maximum="100"/>
                                <Label Text="Reps:" VerticalOptions="Center"/>
                                <Label Text="{Binding Repeticiones}" VerticalOptions="Center"/>
                            </StackLayout>

                            <StackLayout Orientation="Horizontal" Spacing="15" Grid.Column="4">
                                <Stepper Value="{Binding Series}" BackgroundColor="{StaticResource AzulCian}" Minimum="0" Maximum="20"/>
                                <Label Text="Series:" VerticalOptions="Center"/>
                                <Label Text="{Binding Series}" VerticalOptions="Center"/>
                            </StackLayout>

                            <StackLayout Orientation="Horizontal" Spacing="15" Grid.Column="5">
                                <Stepper Value="{Binding Kg}" BackgroundColor="{StaticResource AzulCian}" Minimum="0" Maximum="300" Increment="1"/>
                                <Label Text="KG:" VerticalOptions="Center"/>
                                <Label Text="{Binding Kg}" VerticalOptions="Center"/>
                            </StackLayout>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Menú Barra-->
        <local:MenuBarra Grid.Row="2"/>

    </Grid>
</ContentPage>